<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.job.whatsappstories">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.vending.BILLING" />


    <application
        android:name="com.job.whatsappstories.commoners.Application"
        android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">

        <!--  AdMob App ID: ca-app-pub-3733291416843196~1132657073 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3733291416843196~1132657073"/>

        <!--  Added crashlytic key -->
        <!--<meta-data
            android:name="io.fabric.ApiKey"
            android:value="bd67bf129c485e4f45930b61a67e4b8b08359675" />-->


        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="@bool/FIREBASE_CRASH_ENABLED"/>

        <service
            android:name=".utils.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <activity android:name="com.job.whatsappstories.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="whatsapp-stories.com"
                    android:scheme="http" />
                <data
                    android:host="whatsapp-stories.com"
                    android:scheme="https" />
                <data
                    android:host="whatsappstories.page.link"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name="com.job.whatsappstories.commoners.BaseActivity" />
        <activity android:name="com.job.whatsappstories.activities.ImageActivity" />
        <activity android:name="com.job.whatsappstories.activities.VideoActivity"/>
    </application>

</manifest>